<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/bgbackground"
        android:id="@+id/ll_leave">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/rlTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/lltopsubtitle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@drawable/blue_gradient"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnPending"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_34sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:background="@drawable/button_bg4"
                            android:fontFamily="@font/intermedium"
                            android:text="Pending"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp"
                            tools:ignore="TouchTargetSizeCheck" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnApproved"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_34sdp"
                            android:layout_marginLeft="@dimen/_7sdp"
                            android:layout_weight="1"
                            android:background="@drawable/button_bg4"
                            android:fontFamily="@font/intermedium"
                            android:text="Approved"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textSize="@dimen/_10sdp"
                            tools:ignore="TouchTargetSizeCheck" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnCancelreject"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_34sdp"
                            android:layout_marginLeft="@dimen/_7sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:background="@drawable/button_bg4"
                            android:fontFamily="@font/intermedium"
                            android:text="Cancel / Reject"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textSize="@dimen/_10sdp"
                            tools:ignore="TouchTargetSizeCheck" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_below="@+id/lltopsubtitle"
                    android:background="#EBEBEB"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/cbCheckAll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:layout_weight="1"
                        android:fontFamily="@font/intermedium"
                        android:text="All"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/tvNametitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight="0.8"
                        android:fontFamily="@font/intermedium"
                        android:text="Name"
                        android:textSize="@dimen/_11sdp" />

                    <TextView
                        android:id="@+id/tvDatatitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/intermedium"
                        android:text="Date"
                        android:textSize="@dimen/_11sdp" />

                    <TextView
                        android:id="@+id/tvActiontitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/intermedium"
                        android:text="Action"
                        android:textAlignment="center"
                        android:textSize="@dimen/_11sdp" />


                </LinearLayout>

            </RelativeLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvleave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlTop" />


                <ImageView
                    android:id="@+id/ImgNoevent"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/report"
                    android:visibility="gone" />



                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/interbold"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="Cancel Leave list is empty"
                        android:textAlignment="center"
                        android:visibility="gone"
                        android:layout_below="@+id/ImgNoevent"
                        android:textColor="@color/light_black"
                        android:textSize="@dimen/_12sdp" />




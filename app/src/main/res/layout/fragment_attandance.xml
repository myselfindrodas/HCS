<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.AttandanceFragment">

        <LinearLayout
            android:id="@+id/ll_nav"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imgback"
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:gravity="center"
                    android:src="@drawable/ic_arrow" />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="9"
                android:fontFamily="@font/intermedium"
                android:text="Attendance"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/_12sdp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/btnNotification"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:textAllCaps="false" />
            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/med_layer"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/ll_nav"
            android:background="@drawable/blue_gradient">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivPrev"
                    android:layout_weight="1"
                    android:layout_width="45dp"
                    android:layout_height="55dp"
                    app:tint="@color/white"
                    android:src="@drawable/ic_left" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:layout_centerInParent="true"
                    android:gravity="center">

                    <ImageView

                        android:id="@+id/calendar_icon"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/calender_icon" />

                    <TextView
                        android:id="@+id/calenderTXT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/calendar_icon"
                        android:fontFamily="@font/interbold"
                        android:text="September 2022"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </RelativeLayout>


                <ImageView
                    android:id="@+id/ivNext"
                    android:layout_weight="1"
                    android:layout_width="45dp"
                    android:layout_height="55dp"
                    app:tint="@color/white"
                    android:src="@drawable/ic_right" />


            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/low_layer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/med_layer"
            android:background="@color/light_grey">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:fontFamily="@font/interbold"
                    android:text="Date"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/interbold"
                    android:text="Punch In"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/interbold"
                    android:text="Punch Out"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_weight="1.2"
                    android:fontFamily="@font/interbold"
                    android:text="Shift"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/interbold"
                    android:text="W.Hrs"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </LinearLayout>

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rec_attandance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/low_layer" />


    </RelativeLayout>
</layout>

<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Login">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bgbackground">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <androidx.cardview.widget.CardView
                            android:id="@+id/imgcv"
                            android:layout_width="@dimen/_85sdp"
                            android:layout_height="@dimen/_85sdp"
                            android:layout_marginLeft="@dimen/_35sdp"
                            android:layout_marginTop="@dimen/_40sdp"
                            app:cardCornerRadius="@dimen/_55sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/bgcolor"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="@dimen/_45sdp"
                                    android:layout_height="@dimen/_45sdp"
                                    android:src="@drawable/ic_login" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                        <LinearLayout
                            android:id="@+id/ll_welcomeback"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imgcv"
                            android:layout_marginLeft="@dimen/_25sdp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:fontFamily="@font/interbold"
                                android:text="Welcome Back"
                                android:textColor="@color/textcolor"
                                android:textSize="@dimen/_22sdp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/interregular"
                                android:text="Login to continue"
                                android:textSize="@dimen/_14sdp" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ll_welcomeback"
                            android:layout_marginLeft="@dimen/_25sdp"
                            android:layout_marginTop="@dimen/_60sdp"
                            android:layout_marginRight="@dimen/_25sdp"
                            android:orientation="vertical">


                            <EditText
                                android:id="@+id/etUsername"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_45sdp"
                                android:backgroundTint="#4DB4F2"
                                android:drawablePadding="@dimen/_10sdp"
                                android:fontFamily="@font/interregular"
                                android:hint="Employee Id / Phone"
                                android:inputType="number"
                                android:textColor="@color/textcolor"
                                android:textCursorDrawable="@drawable/color_cursor" />


                            <EditText
                                android:id="@+id/etPassword"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_45sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:backgroundTint="#4DB4F2"
                                android:drawablePadding="@dimen/_10sdp"
                                android:fontFamily="@font/interregular"
                                android:hint="Password"
                                android:inputType="textPassword"
                                android:textColor="@color/textcolor"
                                android:textCursorDrawable="@drawable/color_cursor" />


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <CheckBox
                                    android:id="@+id/btncheckbox"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/intermedium"
                                    android:text="Remember me"
                                    android:visibility="gone"
                                    android:textSize="@dimen/_12sdp" />


                                <TextView
                                    android:id="@+id/btnForgotpass"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:visibility="gone"
                                    android:fontFamily="@font/intermedium"
                                    android:text="Forgot Password?"
                                    android:textSize="@dimen/_12sdp" />

                            </RelativeLayout>


                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnLogin"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_50sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:background="@drawable/button_bg"
                                android:fontFamily="@font/intermedium"
                                android:text="Login"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_14sdp" />

                        </LinearLayout>


                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/_25sdp"
                        android:layout_marginRight="@dimen/_25sdp"
                        android:layout_marginBottom="@dimen/_25sdp"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/interregular"
                            android:text="Don't have an account?"
                            android:textSize="@dimen/_14sdp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/btnSignup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:fontFamily="@font/intermedium"
                            android:gravity="start"
                            android:text="Register Now"
                            android:textColor="#007AC3"
                            android:textSize="@dimen/_14sdp" />

                    </RelativeLayout>

                </LinearLayout>


            </ScrollView>


        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

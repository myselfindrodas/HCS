<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bgbackground"
            app:layout_constraintEnd_toEndOf="parent"
            tools:context=".fragment.AdminhrFragment">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/ll_nav"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:id="@+id/btn_back"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/imgback"
                            android:layout_width="@dimen/_14sdp"
                            android:layout_height="@dimen/_14sdp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:gravity="center"
                            android:src="@drawable/ic_arrow" />
                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="9"
                        android:fontFamily="@font/intermedium"
                        android:text="Admin / HR"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/_12sdp" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/btnNotification"
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="@dimen/_16sdp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:textAllCaps="false" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_nav"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#27007AC3">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:backgroundTint="@android:color/darker_gray"
                                android:drawableRight="@drawable/ic_dropdown"
                                android:focusable="false"
                                android:fontFamily="@font/interbold"
                                android:hint="Select Zone"
                                android:textSize="@dimen/_10sdp" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#59007AC3">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:backgroundTint="@android:color/darker_gray"
                                android:drawableRight="@drawable/ic_dropdown"
                                android:focusable="false"
                                android:fontFamily="@font/interbold"
                                android:hint="Location"
                                android:textSize="@dimen/_10sdp" />


                        </LinearLayout>

                    </LinearLayout>


                    <RelativeLayout
                        android:id="@+id/med_layer"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/blue_gradient">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp">

                            <ImageView
                                android:id="@+id/left_arrow"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:src="@drawable/left_arrow" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:gravity="center">

                                <ImageView

                                    android:id="@+id/calendar_icon"
                                    android:layout_width="25dp"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/calender_icon" />

                                <TextView
                                    android:id="@+id/calenderTXT"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="10dp"
                                    android:layout_toRightOf="@+id/calendar_icon"
                                    android:fontFamily="@font/interbold"
                                    android:text="September 2022"
                                    android:textColor="@color/white"
                                    android:textSize="18sp" />
                            </RelativeLayout>


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/right_arrow" />


                        </RelativeLayout>


                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:orientation="horizontal"
                        android:background="#EBEBEB">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Present"
                                android:textColor="#23B480"
                                android:textAlignment="center"
                                android:layout_weight="1"
                                android:fontFamily="@font/intermedium"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Absent"
                                android:textColor="@color/red"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:fontFamily="@font/intermedium"/>

                        </LinearLayout>




                    </LinearLayout>






                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.7"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:text="All Employees: 594"
                                android:fontFamily="@font/intermedium"
                                android:textColor="@color/black"/>


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:text="562"
                                android:fontFamily="@font/intermedium"
                                android:textColor="@color/black"/>


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:textAlignment="center"
                                android:text="32"
                                android:fontFamily="@font/intermedium"
                                android:textColor="@color/black"/>



                        </LinearLayout>


                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:background="@android:color/darker_gray" />




                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.7"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:text="All Employees: 594"
                                android:fontFamily="@font/intermedium"
                                android:textColor="@color/black"/>


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:text="562"
                                android:fontFamily="@font/intermedium"
                                android:textColor="@color/black"/>


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:textAlignment="center"
                                android:text="32"
                                android:fontFamily="@font/intermedium"
                                android:textColor="@color/black"/>



                        </LinearLayout>


                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:background="@android:color/darker_gray" />




                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.7"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:text="All Employees: 594"
                                android:fontFamily="@font/intermedium"
                                android:textColor="@color/black"/>


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:text="562"
                                android:fontFamily="@font/intermedium"
                                android:textColor="@color/black"/>


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:textAlignment="center"
                                android:text="32"
                                android:fontFamily="@font/intermedium"
                                android:textColor="@color/black"/>



                        </LinearLayout>


                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:background="@android:color/darker_gray" />




                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.7"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:text="All Employees: 594"
                                android:fontFamily="@font/intermedium"
                                android:textColor="@color/black"/>


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:text="562"
                                android:fontFamily="@font/intermedium"
                                android:textColor="@color/black"/>


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:textAlignment="center"
                                android:text="32"
                                android:fontFamily="@font/intermedium"
                                android:textColor="@color/black"/>



                        </LinearLayout>


                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:background="@android:color/darker_gray" />




                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.7"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:text="All Employees: 594"
                                android:fontFamily="@font/intermedium"
                                android:textColor="@color/black"/>


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:text="562"
                                android:fontFamily="@font/intermedium"
                                android:textColor="@color/black"/>


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:textAlignment="center"
                                android:text="32"
                                android:fontFamily="@font/intermedium"
                                android:textColor="@color/black"/>



                        </LinearLayout>


                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:background="@android:color/darker_gray" />




                    </LinearLayout>




                </LinearLayout>


            </RelativeLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

</layout>